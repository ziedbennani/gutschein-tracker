generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Coupon {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  employee     String?
  description  String?
  oldSystem    Boolean
  oldId        String?  
  firstValue   Decimal? @db.Decimal(10,2)
  usedValue    Decimal? @db.Decimal(10,2)
  restValue    Decimal? @db.Decimal(10,2)
  used         Boolean
  location     String?
  extraPayment Decimal? @db.Decimal(10,2)
  tip          Decimal? @db.Decimal(10,2)
  couponType   String   

  couponHistory CouponHistory[] @relation("CouponHistory")
}

model CouponHistory {
  id           String   @id @default(cuid())
  modifiedAt   DateTime @default(now())
  employee     String?
  description  String?
  oldSystem    Boolean
  oldId        String?  
  firstValue   Decimal? @db.Decimal(10,2)
  usedValue    Decimal? @db.Decimal(10,2)
  restValue    Decimal? @db.Decimal(10,2)
  used         Boolean
  location     String?
  extraPayment Decimal? @db.Decimal(10,2)
  tip          Decimal? @db.Decimal(10,2)
  couponType   String   

  coupon      Coupon   @relation(fields: [couponId], references: [id], onDelete: Cascade, name: "CouponHistory")
  couponId    String

  @@index([couponId, modifiedAt])  
}

